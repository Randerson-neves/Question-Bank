<div class="container">
    <hr>
    <h1>Pergunta</h1>
    <hr>
    <a href="/perguntar" class="btn btn-primary">Perguntar</a>
    <hr>
    <% perguntas.forEach(pergunta =>{ %>
    <br>
        <div class="card">
            <div class="card-body">
                <div class="d-inline bg-primary">
                    <h3><%= pergunta.titulo %></h3>
                    <form class="form-settings" method="post" action="/excluirpergunta">
                        <input type="hidden" name="id" value="<%= pergunta.id%>">
                        <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                    </form>
                </div>
            </div>

            <div class="card-footer">
                <a class="btn btn-primary" href="/resposta/<%=pergunta.id%>">Responder</a>
            </div>
        </div>

    <% }) %>
</div>