<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <p>Pergunta feita em: <%= pergunta.createdAt %></p>
        <hr>
        <form method="post" action="/salvarresposta">
            <h3>Resposta:</h3>
            <textarea placeholder="Digite sua resposta aqui" class="form-control" name="corpo"></textarea>
            <input name="perguntaId" type="hidden" value="<%= pergunta.id%>">
            <button type="submit" class="btn btn-success spacing-button" >Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{%>
            <br>
            <div class="card"> 
                <div class="card-body">
                    <p class="answer-marg"><%= resposta.corpo%></p>
                    <form class="form-settings" method="post" action="/excluirresposta">
                        <input name="perguntaId" type="hidden" value="<%= pergunta.id%>">
                        <input type="hidden" name="id" value="<%= resposta.id%>">
                        <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                    </form>

                </div>
            </div>
        <% })%> 
    </div>

</body>
<%- include('partials/footer.ejs') %>
